{
  "name": "skale-ima-proxy",
  "private": true,
  "license": "AGPL-3.0",
  "author": "SKALE Labs and contributors",
  "scripts": {
    "compile": "rm -rf ./build && ./node_modules/.bin/truffle compile",
    "deploy-to-both-chains": "DIRECTION=both bash ./scripts/deploy.sh",
    "deploy-to-mainnet": "DIRECTION=main bash ./scripts/deploy.sh",
    "deploy-to-schain": "DIRECTION=schain bash ./scripts/deploy.sh",
    "generate": "truffle compile && typechain --target truffle './build/**/*.json'",
    "lint": "npx solium --dir contracts",
    "prepare": "yarn generate",
    "test": "truffle test && yarn tsc",
    "tsc": "tsc --noEmit",
    "tslint": "npx tslint --project ."
  },
  "dependencies": {
    "dotenv": "^7.0.0",
    "ethereumjs-tx": "^1.3.7",
    "openzeppelin-solidity": "^2.2.0",
    "solc": "^0.5.4",
    "truffle": "^5.0.12",
    "truffle-hdwallet-provider": "^1.0.9",
    "typescript": "^3.5.2",
    "web3": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/minimist": "^1.2.0",
    "@types/web3": "^1.0.19",
    "bignumber.js": "^9.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.5.0",
    "ethlint": "^1.2.4",
    "ganache-cli": "^6.5.0",
    "solidity-coverage": "leapdao/solidity-coverage",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typechain": "^0.3.19"
  }
}
