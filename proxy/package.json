{
    "name": "skale-ima-proxy",
    "private": true,
    "license": "AGPL-3.0",
    "author": "SKALE Labs and contributors",
    "scripts": {
        "compile": "npx hardhat clean && npx hardhat compile",
        "deploy-to-both-chains": "yarn deploy-to-mainnet && yarn deploy-to-schain",
        "deploy-to-mainnet": "npx hardhat run migrations/deployMainnet.ts --network mainnet",
        "deploy-to-schain": "npx hardhat run migrations/deploySchain.ts --network schain",
        "deploy-skale-manager-components": "npx hardhat run migrations/deploySkaleManagerComponents.ts --network mainnet",
        "lint": "npx solhint \"contracts/**/*.sol\"",
        "prepare": "yarn compile",
        "test": "yarn tsc && npx hardhat test",
        "tsc": "tsc --noEmit",
        "tslint": "npx tslint --project .",
        "slither": "slither .",
        "fullcheck": "yarn lint && yarn tsc && yarn tslint && yarn slither",
        "hooks": "git config core.hooksPath proxy/.githooks",
        "no-hooks": "git config core.hooksPath .git/hooks"
    },
    "dependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "@openzeppelin/contracts-upgradeable": "^4.1.0",
        "@openzeppelin/hardhat-upgrades": "^1.8.2",
        "@skalenetwork/skale-manager-interfaces": "^0.1.1",
        "dotenv": "^10.0.0",
        "ethereumjs-tx": "2.1.2",
        "ethers": "^5.4.1",
        "hardhat": "^2.4.0",
        "path": "^0.12.7",
        "web3": "^1.3.6"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-etherscan": "^2.1.1",
        "@typechain/ethers-v5": "^6.0.5",
        "@types/chai": "^4.2.12",
        "@types/chai-almost": "^1.0.1",
        "@types/chai-as-promised": "^7.1.3",
        "@types/minimist": "^1.2.0",
        "@types/mocha": "^8.2.2",
        "bignumber.js": "^9.0.0",
        "chai": "^4.2.0",
        "chai-almost": "^1.0.1",
        "chai-as-promised": "^7.1.1",
        "codecov": "^3.7.1",
        "ethereum-waffle": "^3.3.0",
        "ganache-cli": "^6.12.1",
        "hardhat-typechain": "^0.3.5",
        "solhint": "3.2.1",
        "solidity-coverage": "^0.7.16",
        "ts-generator": "^0.1.1",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.3",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typechain": "^4.0.3",
        "typescript": "^4.2.4"
    }
}
