{
    "name": "skale-ima-proxy",
    "private": true,
    "license": "AGPL-3.0",
    "author": "SKALE Labs and contributors",
    "scripts": {
        "compile": "rm -rf ./build && ./node_modules/.bin/truffle compile",
        "deploy-to-both-chains": "DIRECTION=both bash ./scripts/deploy.sh",
        "deploy-to-mainnet": "DIRECTION=main bash ./scripts/deploy.sh",
        "deploy-to-schain": "DIRECTION=schain bash ./scripts/deploy.sh",
        "generate": "./node_modules/.bin/truffle compile && typechain --target truffle './build/**/*.json'",
        "lint": "npx solium --dir contracts",
        "prepare": "yarn generate",
        "skale-manager-integration": "bash ./scripts/prepare.sh",
        "test": "truffle test && yarn tsc",
        "tsc": "tsc --noEmit",
        "tslint": "npx tslint --project ."
    },
    "dependencies": {
    "dotenv": "^7.0.0",
        "ethereumjs-tx": "^2.1.2",
        "openzeppelin-solidity": "^2.2.0",
        "solc": "^0.5.4",
        "truffle": "^5.1.22",
        "truffle-hdwallet-provider": "^1.0.9",
        "typescript": "^3.8.3"
    },
    "devDependencies": {
        "@nomiclabs/buidler": "^1.3.7",
        "@nomiclabs/buidler-truffle5": "^1.1.2",
        "@nomiclabs/buidler-web3": "^1.1.2",
        "@types/chai": "^4.2.11",
        "@types/chai-as-promised": "^7.1.0",
        "@types/minimist": "^1.2.0",
        "@types/web3": "1.0.19",
        "bignumber.js": "^9.0.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "codecov": "^3.6.5",
        "ethlint": "^1.2.4",
        "ganache-cli": "^6.5.0",
        "solidity-coverage": "0.7.0",
        "truffle-typings": "1.0.8",
        "ts-node": "^8.8.2",
        "tslint": "^5.18.0",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typechain": "^0.3.19",
        "web3": "^1.0.0-beta.37"
    }
}